---
import { Image } from '@astrojs/image/components'
import aktieansvar from '../assets/clients/AktieAnsvar-logo-ligg.png'
import akzonobel from '../assets/clients/akzonobel.png'
import gp from '../assets/clients/GP.png'
import scania from '../assets/clients/scania.png'
import stena from '../assets/clients/stena.png'
import svt from '../assets/clients/svt.png'
import volvo from '../assets/clients/Volvo.png'
import akelius from '../assets/clients/akelius.png'
import skf from '../assets/clients/skf.png'
---

<aside class='neu-box'>
  <div
    ><Image
      width={250}
      aspectRatio={500 / 112}
      src={aktieansvar}
      alt='Aktie-ansvar'
      format='png'
    /></div
  >
  <div
    ><Image
      aspectRatio={500 / 97}
      width={250}
      src={akzonobel}
      alt='Akzo Nobel'
    /></div
  >
  <div
    ><Image
      width={250}
      aspectRatio={500 / 78}
      src={gp}
      alt='GÃ¶teborgs-posten'
    /></div
  >
  <div
    ><Image width={250} aspectRatio={500 / 58} src={scania} alt='Scania' /></div
  >
  <div
    ><Image width={250} aspectRatio={300 / 172} src={stena} alt='Stena' /></div
  >
  <div><Image width={250} aspectRatio={500 / 124} src={svt} alt='Svt' /></div>
  <div
    ><Image width={250} aspectRatio={1200 / 165} src={volvo} alt='Volvo' /></div
  >
  <div
    ><Image
      width={250}
      aspectRatio={500 / 128}
      src={akelius}
      alt='Akelius'
      style='padding-inline: 1rem'
    />
  </div>
  <div
    ><Image
      width={250}
      aspectRatio={500 / 95}
      src={skf}
      alt='SKF'
      style='padding-inline: 0.5rem'
    />
  </div>
</aside>
<style lang='scss'>
  aside {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.8;
    // grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    grid-gap: 1rem;
    margin-block: 3rem;
    padding-block: 1rem;
    border-top: 3px solid hsl(30, 4%, 100%, 0.5);
    border-bottom: 3px solid hsl(30, 4%, 20%, 0.5);
    img {
      display: block;
      max-width: 100%;
      max-height: 2rem;
      object-fit: scale-down;
      filter: grayscale(1);
    }
  }
  html.dark-theme aside {
    border-color: hsl(30, 4%, 100%, 0.3);
    border-bottom: none;
    img {
      filter: grayscale(1) invert(1) opacity(0.8);
    }
  }
</style>
