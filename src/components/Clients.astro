<style lang='scss'>
  aside {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.8;
    // grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    grid-gap: 1rem;
    margin-block: 3rem;
    padding-block: 1rem;
    border-top: 3px solid hsl(30, 4%, 100%, 0.5);
    border-bottom: 3px solid hsl(30, 4%, 20%, 0.5);
    img {
      display: block;
      max-width: 100%;
      max-height: 2rem;
      object-fit: scale-down;
      filter: grayscale(1);
    }
  }
  html.dark-theme aside {
    border-color: hsl(30, 4%, 100%, 0.3);
    border-bottom: none;
    img {
      filter: grayscale(1) invert(1) opacity(0.8);
    }
  }
</style>
